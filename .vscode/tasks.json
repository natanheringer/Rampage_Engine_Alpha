{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Rampage Engine",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/main.cpp",
                "-o",
                "build/Rampage_Engine_Alpha.exe",
                "-IC:/msys64/mingw64/include",
                "-LC:/msys64/mingw64/lib",
                "-lglfw3",
                "-lgdi32",
                "-lopengl32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}